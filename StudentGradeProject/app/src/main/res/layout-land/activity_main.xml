<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/student_name_text_view"
        android:layout_width="164dp"
        android:layout_height="29dp"
        android:text="@string/student_name_text_view"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/student_grade_average_text_view"
        android:layout_width="166dp"
        android:layout_height="28dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="28dp"
        android:text="@string/student_grade_average_text_view" />

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
      >

        <Button
            android:id="@+id/prev_student_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prev_student_button" />

        <Button
            android:id="@+id/next_student_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/next_student_button" />

    </LinearLayout>

    <Button
        android:id="@+id/student_grade_average_button"
        android:layout_width="185dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:text="@string/student_grade_average_button"
        android:layout_gravity="center|center_horizontal"/>

</FrameLayout>